{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "OpenAI Chrome Extension",
  "description": "This is a Chrome extension built with React and TypeScript",
  "action": {
      "default_popup": "dist/js/index.html",
      "default_title": "React OpenAI Chrome Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "contentScript.ts"
      ]
    }
  ],
  "permissions": [
    "scripting"
  ]
}